<div class="container" style="margin-top:40px;">
  <div class="row">
    <div class="col-md-8 single-news-page">
      <div class="col-md-12 ">
        <div class="author">
          <img src="https://image.flaticon.com/icons/svg/147/147144.svg" class="img-circle avatar" alt="" style="margin-right:25px; float:left;">
          <span>
            <strong>Oda Aditiya Nicola<br/></strong>
            <small><%= Time.at(@news.updated_at).strftime("%a %b %d %H:%M:%S %Z %Y")%></small>
          </span>
          <span style="text-align:right;"><strong>16 Views</strong></span>
        </div>
      </div>
      <div class="col-md-12">
        <img class="img-responsive" src="https://via.placeholder.com/800x400" alt="">
      </div>
      <hr>
      <div class="col-md-12 title">
        <h4><span class="label label-success"><%= @news.post_type.capitalize %></span></h4>
        <h3><%= @news.title %></h3>
      </div>
      <hr>
      <div class="col-md-12">
        <img src="https://tpc.googlesyndication.com/simgad/8940294727691816665" alt="" class="img-responsive">
      </div>
      <div class="col-md-12">
        <div class="sharethis-inline-share-buttons"></div>
      </div>
      <div class="col-md-12 content">
        <p><%= @news.content %></p>
      </div>
      <div class="col-md-12">
        <div id="disqus_thread"></div>
        <script>

        (function() { // DON'T EDIT BELOW THIS LINE
        var d = document, s = d.createElement('script');
        s.src = 'https://sikurir.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
        })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

      </div>
    </div>
    <div class="col-md-4">
      <%= render 'layouts/frontend/sidebar' %>
    </div>
  </div>
</div>
