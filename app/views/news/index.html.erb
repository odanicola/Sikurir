<div class="container" style="margin-top:40px;">
  <div class="row">
    <div class="col-md-8 all-news-page">
      <ul class="list-article">
        <% @news_all.each do |value| %>
        <li class="col-md-12 nopadding article">
          <div class="col-md-4 nopadding-left">
            <a href="<%= news_path(value.slug) %>">
              <img class="img-responsive" src="https://via.placeholder.com/400x400" alt="">
            </a>
          </div>
          <div class="col-md-8 nopadding-right">
            <span class="label label-success"><%= value.post_type.capitalize %></span>
            <div class="col-md-12 title nopadding">
              <a href="<%= news_path(value.slug) %>">
                <span>
                  <h4>
                    <strong><%= value.title %></strong>
                    <br>
                    <small>
                      <%= Time.at(value.updated_at).strftime("%a %b %d %H:%M:%S %Z %Y")%>
                    </small>
                  </h4>
                  </span>
              </a>
            </div>
            <div class="col-md-12 content nopadding">
              <p><%= excerpt(value.content, '', radius: 250) %>...</p>
              <ul class="tag">
                <li>Tracking</li>
                <li>Pengiriman</li>
                <li>Kurir</li>
              </ul>
            </div>
          </div>
        </li>
        <% end %>
      </ul>

    </div>
    <div class="col-md-4">
      <%= render 'layouts/frontend/sidebar' %>
    </div>
  </div>
</div>
